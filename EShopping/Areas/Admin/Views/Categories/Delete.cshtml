@model EShopping.Areas.Admin.Models.CategoryViewModel

@{
    ViewBag.Title = "Delete";
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="main">
        <div class="col-lg-12">
            <div class="inline">
                <div class="col-lg-6">
                    <h1>Delete Category</h1>
                </div>
            </div>
        </div>
        <!--Form-->
        <br>
        <div class="col-lg-12">
            <h3>Are you sure you want to delete Category @Model.Name ?</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Category_Id)
                @Html.HiddenFor(m => m.ImageUrl)

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
                    <a class="btn btn-outline-dark" href="@Url.Action("Index")">Back to List</a>
                </div>
            }
        </div>
    </div>

</main>

