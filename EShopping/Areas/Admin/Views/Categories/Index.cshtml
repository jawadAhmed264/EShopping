@using EShopping.Areas.Admin.Models
@model IEnumerable<CategoryViewModel>

@{
    ViewBag.Title = "Categories";
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
   <div class="main">
        <div class="col-lg-12">
            <div class="inline">
                <div class="col-lg-6">
                    <h1>Category List</h1>
                </div>
                <div class="col-lg-6">
                    <div class="float-right">
                        <a class="btn btn-outline-dark" href="@Url.Action("Create","Categories")">Add new</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <!--Table-->
            <div class="tbl table-responsive" id="table">
                <table id="myTable" class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">@item.Name</td>
                                <td>@item.Description</td>
                                <td><img src="@Url.Content(item.ImageUrl)" width="80" height="80" alt="@item.Name"></td>
                                <td>@(item.Active?"Active":"Inactive")</td>
                                <td>
                                    <a class="edt-btn" href="@Url.Action("Edit","Categories",new { Id=item.Id})"><i class="fas fa-pencil-alt"></i></a>
                                    <a class="del-btn" href="@Url.Action("Delete","Categories",new { Id=item.Id})"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>


@section scriptsAdmin{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}