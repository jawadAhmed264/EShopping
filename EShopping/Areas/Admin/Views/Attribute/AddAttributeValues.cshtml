@model EShopping.Areas.Admin.Models.AttributeViewModels.AttributeValueViewModel

@{
    ViewBag.Title = "AddAttributeValues";
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="main">
        <div class="col-lg-12">
            <div class="inline">
                <div class="col-lg-6">
                    <h2>Add Attribute Values for @Model.Name</h2>
                </div>
                <div class="col-lg-6">
                    <div class="float-right">
                        <a class="btn btn-outline-dark" href="@Url.Action("Index")">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <!--Form-->
        <br>
        <div class="col-lg-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m=>m.Attribute_Id)
                <div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Attribute Value</label>
                        @Html.TextBoxFor(m => m.Value, null, new { @class = "form-control form-mr", placeholder = "Enter Attribute Value" })
                        @Html.ValidationMessageFor(m => m.Value, null, new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12">
                        <input type="submit" value="Add" class="btn btn-outline-dark" />
                    </div>
                </div>
            }
            @Html.Action("AttributeValueList","Attribute",new { AttributeId =Model.Attribute_Id})
        </div>
    </div>
</main>
