@model EShopping.Areas.Admin.Models.FAQViewModel

@{
    ViewBag.Title = "Create";
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="main">
        <div class="col-lg-12">
            <div class="inline">
                <div class="col-lg-6">
                    <h1>Add New FAQ</h1>
                </div>
                <div class="col-lg-6">
                    <div class="float-right">
                        <a class="btn btn-outline-dark" href="@Url.Action("Index")">Check List</a>
                    </div>
                </div>
            </div>
        </div>
        <!--Form-->
        <br>
        <div class="col-lg-12">
            @using (Html.BeginForm("Create", "FAQ", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Question</label>
                        @Html.TextAreaFor(m => m.Question, new { @class = "form-control form-mr", placeholder = "Enter Question", rows = "4" })
                        @Html.ValidationMessageFor(m => m.Question, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Answer</label>
                        @Html.TextAreaFor(m => m.Answer, new { @class = "form-control form-mr", placeholder = "Enter Answer", rows = "10" })
                        @Html.ValidationMessageFor(m => m.Answer, null, new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12">
                        <input type="submit" value="Add" class="add-btn" />
                    </div>
                </div>
            }

        </div>
    </div>
</main>

